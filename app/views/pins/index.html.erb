<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  
  <div class="panel-body">
    
    <% @pins.each do |pin| %>
    
      <%= link_to image_tag(pin.image.url(:thumb)), pin %><br>
      <%= pin.description %><br>
      <% if pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-primary' %>
        <%= link_to 'Destroy', pin, class: 'btn btn-primary', method: :delete, data: { confirm: 'Are you sure?' } %><br>
      <% end %>
      <br>
    <% end %>
  </div>
  
  <div class="panel-footer">
  <%= link_to 'New pin', new_pin_path, class: 'btn btn-primary' %>
  </div>
</div>